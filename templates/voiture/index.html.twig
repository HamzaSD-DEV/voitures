{% extends 'base.html.twig' %}

{% block title %}Voiture index
{% endblock %}

{% block body %}
	<h1>Tout les voitures</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Couleur</th>
				<th>Image</th>
				<th>Prix</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for voiture in voitures %}
				<tr>
					<td>{{ voiture.id }}</td>
					<td>{{ voiture.nom }}</td>
					<td>{{ voiture.couleur }}</td>
					<td><img src={{voiture.image}} alt="" width="500"></td>
					<td>{{ voiture.prix }}</td>
					<td>{{ voiture.description }}</td>
					<td>
						<a href="{{ path('voiture_show', {'id': voiture.id}) }}">show</a>
						<a href="{{ path('voiture_edit', {'id': voiture.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('voiture_new') }}">Create new</a>
{% endblock %}
